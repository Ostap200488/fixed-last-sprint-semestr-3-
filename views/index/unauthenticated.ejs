<nav class="navbar">
    <div class="navbar-container">
        <div class="nav-links">
            <a href="/">Home</a>
            <% if (typeof user !=='undefined' ) { %>
                <a href="/chat">Chat</a>
                <a href="/profile">Profile</a>
            
                <form action="/logout" method="POST">
                    <button type="submit">Logout</button>
                </form>
                <% } else { %>
                    <a href="/login">Login</a>
                    <a href="/signup">Sign Up</a>
                    <% } %>
        </div>
    </div>
</nav>
<style>
    
.navbar {
    width: 100%;
    position: sticky;
    top: 0;
    background-color: rgba(0, 0, 0, 0.5);
    padding: 15px 20px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    z-index: 10;
}


.navbar-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    max-width: 1200px;
    margin: 0 auto;
}


.nav-links {
    display: flex;
    align-items: center;
}

.nav-links a {
    color: #fff;
    font-size: 1.2rem;
    text-decoration: none;
    padding: 10px 15px;
    margin-right: 15px;
    border-radius: 5px;
    transition: background-color 0.3s ease;
}

.nav-links a:hover {
    background-color: rgba(93, 142, 251, 0.8);
}


.nav-links form button {
    background-color: #5D8EFB;
    color: #fff;
    padding: 10px 20px;
    font-size: 1.1rem;
    border-radius: 5px;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.3s ease;
    margin-left: 15px;
}

.nav-links form button:hover {
    background-color: rgba(93, 142, 251, 0.8);
    transform: scale(1.05);
}


@media (max-width: 768px) {
    .navbar-container {
        flex-direction: column;
        align-items: flex-start;
    }

    .nav-links {
        flex-direction: column;
        width: 100%;
        margin-top: 10px;
    }

    .nav-links a {
        margin-right: 0;
        width: 100%;
        text-align: center;
        padding: 12px 0;
    }

    .nav-links form button {
        width: 100%;
        padding: 12px 0;
    }
}

</style>
